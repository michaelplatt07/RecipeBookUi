<link rel="stylesheet" href="/css/upload.css" type="text/css"/>
<script src="/js/upload.js"></script>
<div class="upload-div">
  <form id="uploadForm" action="/recipes/add" method="POST">
    <p>
      Please include the following information about the recipe:
    </p>
    <label for="name">Name: </label><input type="text" class="name-input" name="name" /><br>
    <div id="ingredientDiv" >
      <label for="ingredients">Ingredients: </label>
      <button type="button" class="add-new-item-button" onclick="addNewIngredient()">+</button>
      <br>
      <input type="text" name="quantity" class="quantity-input"/><select class="measurement-input">
	<% measurements.forEach(function(measurement){ %>
	<option value="<%= measurement %>"><%= measurement %></option>
	<% }); %>
      </select><input type="text" name="ingredient" class="ingredient-input" />      
      <br>
    </div>
    <div id="stepDiv">
      <label for="steps">Steps: </label><button type="button" class="add-new-item-button" onclick="addNewStep()">+</button><br>
      <input type="text" name="steps" class="step-input" />
    </div>
    <label for="course">Course: </label><br>
    <select name="course" class="course-select" multiple>
      <% courses.forEach(function(course){ %>
      <option value="<%= course %>"><%= course %></option>
      <% }); %>
    </select>
    <br>
    <label for="prepTime">Prep Time: </label><br>
    <input type="text" name="prepTime" class="prep-input" /> Minutes<br>
    <label for="cookTime">Cook Time: </label><br>
    <input type="text" name="cookTime" class="cook-input" /> Minutes<br>
    <label for="cuisine">Cuisine: </label><br>
    <select name="cuisine" class="cuisine-select" multiple>
      <% cuisines.forEach(function(cuisine){ %>
      <option value="<%= cuisine %>"><%= cuisine %></option>
      <% }); %>
    </select>
    <br>
    <label for="description">Description: </label><br>
    <input type="text" name="description" class="description-input" /><br>
    <label for="searchable">Status: </label>
    <input type="radio" name="searchable" value="true"> Public
    <input type="radio" name="searchable" value="false"> Private
    <br>
    <br>
    <button type="submit" class="upload-button">UPLOAD</button>
  </form>
</div>
